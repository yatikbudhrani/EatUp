<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Contact"
    android:background="@drawable/bg"
    android:weightSum="10"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="Contact Us"
        android:textSize="45sp"
        android:layout_marginTop="40sp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:fontFamily="@font/oregano"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/oregano"
        android:textSize="30sp"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:text="This app was developed by Arjun Bajpai, Yash Goenka and Yatik budhrani. Feel free to contact us."
        android:layout_marginBottom="40sp"
        />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/callArjun"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oregano"
            android:textSize="40sp"
            android:text="Call Arjun"
            android:textAlignment="center"
            android:textColor="#000"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:id="@+id/callYash"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oregano"
            android:textSize="40sp"
            android:text="Call Yash"
            android:textAlignment="center"
            android:textColor="#000"
            />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="20sp"
        android:id="@+id/callYatik"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/oregano"
            android:textSize="40sp"
            android:text="Call Yatik"
            android:textAlignment="center"
            android:textColor="#000"
            />
    </android.support.v7.widget.CardView>



</LinearLayout>