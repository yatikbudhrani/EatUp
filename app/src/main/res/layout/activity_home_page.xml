<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:weightSum="10">


    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Eat Up"
            android:textSize="44sp"
            android:paddingTop="40sp"
            android:layout_marginTop="20sp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:fontFamily="@font/oregano"/>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="8"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14sp"
        android:rowCount="2">

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="13sp"
            android:layout_marginBottom="13sp"
            app:cardCornerRadius="30sp"
            app:cardElevation="8sp"
            android:id="@+id/menu_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="98sp"
                    android:layout_height="104sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/menu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/oregano"
                    android:text="Menu"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#9433c9"
                    android:textSize="22sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="30sp"
            app:cardElevation="8sp"
            android:id="@+id/tables_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="106sp"
                    android:layout_height="120sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/knifenfork" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_marginBottom="5sp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/oregano"
                    android:text="Free Tables"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#9433c9"
                    android:textSize="18sp"
                />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="30sp"
            app:cardElevation="8sp"
            android:id="@+id/aboutus_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="107sp"
                    android:layout_height="170sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/aboutus" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="64sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/oregano"
                    android:text="Your Order"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#9433c9"
                    android:textSize="22sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="13sp"
            android:layout_marginBottom="13sp"
            app:cardCornerRadius="30sp"
            app:cardElevation="8sp"
            android:id="@+id/delivery_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="98sp"
                    android:layout_height="104sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/delivery" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/oregano"
                    android:text="Delivery"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#9433c9"
                    android:textSize="22sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="13sp"
            android:layout_marginRight="13sp"
            android:layout_marginBottom="13sp"
            app:cardCornerRadius="30sp"
            app:cardElevation="8sp"
            android:id="@+id/rating_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="94sp"
                    android:layout_height="104sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/star" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/oregano"
                    android:text="Rate Us"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#9433c9"
                    android:textSize="22sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginBottom="16sp"
            app:cardCornerRadius="30sp"
            app:cardElevation="8sp"
            android:id="@+id/contact_btn">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <ImageView
                    android:layout_width="93sp"
                    android:layout_height="79sp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="2"
                    android:src="@drawable/contactus" />

                <TextView
                    android:layout_width="99sp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="24sp"
                    android:layout_marginBottom="2sp"
                    android:layout_weight="1"
                    android:fontFamily="@font/oregano"
                    android:text="Contact us"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="#9433c9"
                    android:textSize="18sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>


    </GridLayout>



</LinearLayout>